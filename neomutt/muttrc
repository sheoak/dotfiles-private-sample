
set pgp_sign_as = YOUR_PGP_KEY_GOES_HERE

# private settings, do not commit
set folder      = "$HOME/.mail"
set spoolfile   = "+myaccount/Inbox"
set record      = "+myaccount/Envoyes"
set postponed   = "+myaccount/Brouillons"
set trash       = "+myaccount/Corbeille"
set realname    = "John Doe"
set from        = "myaccount@mydomain.ltd"

