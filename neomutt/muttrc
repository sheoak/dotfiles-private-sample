macro index gs "<change-folder> =myaccount/Envoyes"<enter>
macro index gt "<change-folder> =myaccount/Corbeille"<enter>
macro index gp "<change-folder> =myaccount/Spam"<enter>
macro index gd "<change-folder> =myaccount/Brouillons"<enter>
